extends ./partials/layout

block title
  title Presentaciones - Facto | Datasketch

block css
  link(rel="stylesheet", href="assets/css/inner-page.css")

block header
  include ./partials/inner-nav

block main
  main
    .Full.Row
      .Container
        h1.Bitter Presentaciones
        #renderer
          .CardContainer
            .Card(v-for="(slide, index) in slides" :key="index")
              //- .CardHeader
              //-   .CardTitle
              //-     p {{slide.name}}
              //-   .CardSubtitle
              //-     small {{slide.org || ''}}
              .CardContent
                p {{slide.name || ''}}
              .CardFooter
                a.CardButton(v-bind:href="slide.link" target="_blank" rel="nooopener noreferrer") Ver presentación

block js
  script(src="vendors/vue.min.js")
  script.
    new Vue({
      el: '#renderer',
      data: {
        slides: [
          { name: 'Colombiacheck', link: 'https://s3.amazonaws.com/facto.datasketch.co/slides/presentacion_Colcheck.pptx.pdf' },
          { name: 'Datasketch', link: 'https://s3.amazonaws.com/facto.datasketch.co/slides/foro+fact+checking+-+jpmarindiaz+2017-02-16.pdf' },
          { name: 'MOE', link: 'https://s3.amazonaws.com/facto.datasketch.co/slides/Presentaci%C3%B3n+MOE.pdf' },
          { name: 'Sandra Borda', link: 'https://s3.amazonaws.com/facto.datasketch.co/slides/Presentaccion+Sandra+Borda.pptx.pdf' },
          { name: 'Juan David Cárdenas', link: 'https://s3.amazonaws.com/facto.datasketch.co/slides/Presentacion+Juan+David+Cardenas.pdf' },
          { name: 'Oscar Parra', link: 'https://s3.amazonaws.com/facto.datasketch.co/slides/Presentacion+Oscar+Parra.pptx.pdf' },
        ]
      }
    })